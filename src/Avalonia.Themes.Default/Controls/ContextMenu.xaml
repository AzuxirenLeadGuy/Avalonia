<Style xmlns="https://github.com/avaloniaui" Selector="ContextMenu">
    <Setter Property="Background" Value="{ThemeResource ThemeBackgroundBrush}"/>
    <Setter Property="BorderBrush" Value="{ThemeResource ThemeBorderMidBrush}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="Padding" Value="4,2"/>
    <Setter Property="TextBlock.FontSize" Value="{ThemeResource FontSizeNormal}" />
    <Setter Property="TextBlock.FontWeight" Value="Normal" />
    <Setter Property="Template">
    <ControlTemplate>
      <Border Background="{TemplateBinding Background}"
              BorderBrush="{TemplateBinding BorderBrush}"
              BorderThickness="{TemplateBinding BorderThickness}"
              CornerRadius="{TemplateBinding CornerRadius}"
              Padding="{TemplateBinding Padding}">
          <ScrollViewer Classes="menuscroller">
              <ItemsPresenter Name="PART_ItemsPresenter"
                              Items="{TemplateBinding Items}"
                              ItemsPanel="{TemplateBinding ItemsPanel}"
                              ItemTemplate="{TemplateBinding ItemTemplate}"
                              KeyboardNavigation.TabNavigation="Continue"/>
          </ScrollViewer>
      </Border>
    </ControlTemplate>
  </Setter>
</Style>
