<Styles xmlns="https://github.com/avaloniaui">
  <Style Selector="Calendar">
    <!--<Setter Property="Focusable" Value="False" />-->
    <Setter Property="BorderThickness" Value="{ThemeResource ThemeBorderThickness}" />
    <Setter Property="BorderBrush" Value="{ThemeResource ThemeBorderHighBrush}" />
    <Setter Property="Background" Value="{ThemeResource ThemeBackgroundBrush}" />
    <Setter Property="HeaderBackground" Value="{ThemeResource ThemeAccentBrush2}" />
    <Setter Property="Template">
      <ControlTemplate>
        <StackPanel Name="Root"
                    HorizontalAlignment="Center"
                    ClipToBounds="True">

                    <CalendarItem Name="CalendarItem"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="{TemplateBinding CornerRadius}"
                        HeaderBackground="{TemplateBinding HeaderBackground}"/>

        </StackPanel>
      </ControlTemplate>
    </Setter>
  </Style>
</Styles>
